{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOMIterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Vlaggen voor React Imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* React JSX instellingen */
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Base URL voor imports, handig voor absolute paden */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  // FIX: Verwijder de verwijzing naar tsconfig.node.json en scan alles in src
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}